-spacing(scale) {
  margin-top 1.65 * scale
  margin-bottom 1.65 * scale
  padding-top 1.65 * scale
  padding-bottom 1.65 * scale
}

.sidebar {
  display flex
  flex-direction row
  height 100%
  order 0
  margin 2rem
  text-align left
  align-items center
  justify-content space-around
  align-content center
  border-bottom solid 2px fogra29
  @media only screen and (max-width breakpoints.md) {
    flex-direction column
    text-align center
  }
  /* Now for the two main components */
  #logo {
    width 26%
  }
  .title {
    width 100%
    margin auto
    text-align left
    align-items center
    @media only screen and (max-width breakpoints.md) {
      text-align center
    }
    .icon {
      img {
        @media only screen and (max-width breakpoints.sm) {
          display none
        }
        padding-top 4ch
        width max(9vw, 460px)
      }
    }
  }
  /* For the links on the side / bottom */
  .nav {
    margin auto
    align-content center
    width 100%
    display flex
    align-items left
    flex-direction row
    justify-content space-around
    .links {
      margin auto
      display flex
      flex-direction row
      border 2px grullo
      li {
        -spacing(2)
        @media only screen and (max-width breakpoints.md) {
          border-bottom none
        }
        @media only screen and (max-width breakpoints.sm) {
          &:before {
            content none
          }
        }
        margin .65rem
        padding 0.2em
        &>a[href] {
          color sky
          -ease-transition(color)
          color charcoal
          &:hover {
            color midbluegreen
          }
        }
        &:after {
          content none
        }
      }
    }
  }
}

