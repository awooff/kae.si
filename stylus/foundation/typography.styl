h1
h2
h3
h4
h5
h6
p
li
td
tr
th
  font-family display_font
  font-size text_scale_size(3)
  line-height 1.6
  letter-spacing 2.6
  margin .45rem auto .45rem 0

p
  margin .85rem 0

// Cute hack we found for scaling header tags programatically~
for i in (1..6)
  h{i}
    text_scale_size (7 - i)

small
  text_scale_size(-1)

pre
  white-space wrap

time
  font-family mono_font
  font-weight 100

a
  links(rose)
  color rose
  font-family mono_font
  font-weight thin
  text-decoration none
  -ease-transition(color)
  &:hover
    text-decoration underline
    color sky
  &[href]
  links(rose)
    &:visited
      color charcoal

p>code
  border 1px grullo dashed
  font-style italic

strong
  font-weight 600

// https://css-tricks.com/snippets/css/simple-and-nice-blockquote-styling/
-blockquote-theme()
  @media (prefers-color-scheme light)
    background #f9f9f9
    color fogra39
  @media (prefers-color-scheme dark)
    background background-primary
    color text_primary

blockquote
  -blockquote-theme()
  background #f9f9f9
  border-left 10px solid #ccc
  margin 1.5em 10px
  padding 0.5em 10px
  quotes "\201C""\201D""\2018""\2019"
  p
    font-style italic
    display inline
  &:before
    color #ccc
    content open-quote
    font-size 4em
    line-height 0.1em
    margin-right 0.25em
    vertical-align -0.4em

em
  font-style italic

li
  line-height 1.2
  word-spacing 2px
  &:before
    color dimgray
    content ' â¦¿ '

ol>li
  list-style-type upper-roman
  list-style-position inside
  &>li
    list-style-type lower-roman
    &>li
      list-style-type lower-alpha
  &:before
    content none

hr
  display block
  border-top 1px solid rgba(245, 229, 229, 0.575)
  unicode-bidi isolate
  margin-block-start 0.5em
  margin-block-end 0.5em
  margin-inline-start auto
  margin-inline-end auto
  overflow hidden
  border-style inset
  border-width 1px
  margin 1em 0

img {
  max-width: 37.5em; /* 600px /16 */
}

p,
.tmpl-post li {
  line-height: 1.45;
}

small
  font-family display_font
  font-display small-caps
  line-height 1.2

article>section>p
  font-family sans_font
  letter-spacing 1.6
  line-height 1.6
  >a
    &:before
      content "[["
    &:after
      content "]]"