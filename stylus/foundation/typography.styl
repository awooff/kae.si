// Cute hack I found for scaling header tags programatically~
for i in (1..6)
  h{i}
    text_scale_size (7 - i)

small
  text_scale_size -1

pre
  white-space wrap

time
  font-family mono_font
  font-weight 100

a
  links(rose)
  color rose
  font-family mono_font
  font-weight thin
  text-decoration none
  transition color 0.4s ease-out 
  -webkit-transition color .2s ease-out
  -moz-transition color .2s ease-out
  -o-transition color .2s ease-out
  transition color .2s ease-out
  body.dark &
    color primary_color_dark
  &:hover
    text-decoration underline
    color sky
  &[href]
  links(rose)
    &:visited
      color charcoal

p>code
  border 1px grullo dashed
  font-style italic

strong
  font-weight 600

// https://css-tricks.com/snippets/css/simple-and-nice-blockquote-styling/
-blockquote-theme()
  @media (prefers-color-scheme light)
    background #f9f9f9
    color fogra39
  @media (prefers-color-scheme dark)
    background background-primary
    color text_primary

blockquote
  -blockquote-theme()
  background #f9f9f9
  border-left 10px solid #ccc
  margin 1.5em 10px
  padding 0.5em 10px
  quotes "\201C""\201D""\2018""\2019"
  p
    font-style italic
    display inline
  &:before
    color #ccc
    content open-quote
    font-size 4em
    line-height 0.1em
    margin-right 0.25em
    vertical-align -0.4em

