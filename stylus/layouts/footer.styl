footer
  margin-top 12px
  border-top 1px grullo solid
  display inline-flex
  flex-direction column
  margin .2em
  justify-content space-around
  width 100%
  @media only screen and (max-width breakpoints.sm)
    flex-direction column
  > p
    line-height 1.2
    padding-left .2em
    padding-right .6em
  img
    max-width 140px
    max-height 140px
    min-height 120px
    object-fit cover
    padding .6rem
    @media only screen and (max-width breakpoints.sm)
      overflow hidden
      display none
  .top
    display flex
    flex-direction row
  .content
    @media only screen and (max-width breakpoints.sm)
      flex-direction column
    flex-direction row
    margin .8rem
  .site_info
    display flex
    margin .8rem 0
    align-items center
    justify-content space-between
    &__inner
      justify-content space-evenly
    .links
      display flex
      flex-direction column
      padding-left 0
      &>a
        padding .2rem
    .row
      display flex
      flex-direction row
    .column
      margin-right 12px
      margin-left 12px
      display flex
      flex-direction column
